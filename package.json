{
  "name": "hot_potato_react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "dev:web": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev:web\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false --ci",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "audit": "npm audit --audit-level moderate",
    "bundle-size": "npm run build && echo 'Bundle size check skipped - bundlesize not installed'",
    "ci": "npm run type-check && npm run lint && npm run format:check && npm run test:ci && npm run audit"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@react-oauth/google": "^0.12.2",
    "@tiptap/extension-color": "^3.9.0",
    "@tiptap/extension-image": "^3.9.0",
    "@tiptap/extension-text-style": "^3.9.0",
    "@tiptap/extension-underline": "^3.9.0",
    "@tiptap/pm": "^3.9.0",
    "@tiptap/react": "^3.9.0",
    "@tiptap/starter-kit": "^3.9.0",
    "@vitejs/plugin-react": "^4.7.0",
    "docx": "^9.5.1",
    "file-saver": "^2.0.5",
    "jwt-decode": "^4.0.0",
    "papyrus-db": "^1.0.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "rrule": "^2.8.1",
    "vite": "^5.4.20",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/file-saver": "^2.0.7",
    "@types/jest": "^29.5.8",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "~5.0.4",
    "typescript-eslint": "^8.34.1",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.hotpotato.erp",
    "productName": "HP ERP",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": "dmg"
    },
    "win": {
      "target": "nsis",
      "icon": "public/logo.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
