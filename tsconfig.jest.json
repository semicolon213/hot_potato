{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "module": "es2020",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/**/*"
  ]
}
