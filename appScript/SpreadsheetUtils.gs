    const data = getSheetData(spreadsheetId, sheetName, 'A:Z');
    if (!data || data.length <= 1) {
      return false;
    }
    
    const header = data[0];
    const columnIndex = header.indexOf(column);
    
    if (columnIndex === -1) {
      console.warn('ì •ë ¬í•  ì»¬ëŸ¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤:', column);
      return false;
    }
    
    // ë°ì´í„° ì •ë ¬ (í—¤ë” ì œì™¸)
    const dataRows = data.slice(1);
    dataRows.sort((a, b) => {
