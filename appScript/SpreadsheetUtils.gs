    const header = data[0];
    const results = [];
    
    // ë°ì´í„° í•„í„°ë§
    for (let i = 1; i < data.length; i++) {
      const row = data[i];
      let matches = true;
      
      // ê° í•„í„° ì¡°ê±´ í™•ì¸
      Object.keys(filters).forEach(column => {
        const columnIndex = header.indexOf(column);
        if (columnIndex !== -1) {
